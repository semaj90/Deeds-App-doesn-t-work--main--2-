# Shared Database Environment Variables
# Copy to .env and update values as needed

# === DATABASE ===
DATABASE_URL=postgres://postgres:postgres@localhost:5432/prosecutor_app
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prosecutor_app
DB_USER=postgres
DB_PASSWORD=postgres

# === VECTOR DATABASE (Qdrant) ===
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# === JWT & AUTH ===
JWT_SECRET=your-super-secret-jwt-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:5173

# === STORAGE ===
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# === AI & ML ===
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# === EMAIL (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# === DEVELOPMENT ===
NODE_ENV=development
LOG_LEVEL=debug
VITE_API_URL=http://localhost:5173

# === PRODUCTION OVERRIDES ===
# Uncomment and set for production:
# DATABASE_URL=postgres://user:password@production-host:5432/prosecutor_app
# QDRANT_URL=https://your-qdrant-instance.com
# NODE_ENV=production
# LOG_LEVEL=info
