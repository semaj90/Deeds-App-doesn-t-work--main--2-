{
	"name": "prosecutor-app-monorepo",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"workspaces": [
		"web-app/sveltekit-frontend",
		"desktop-app/sveltekit-frontend"
	],
	"scripts": {
		"// === Platform Scripts ===": "",
		"dev": "cd web-app/sveltekit-frontend && npm install && npm run dev:local",
		"web:dev": "powershell scripts/dev-web.ps1",
		"web:build": "cd web-app/sveltekit-frontend && npm run build",
		"web:preview": "cd web-app/sveltekit-frontend && npm run preview",
		"web:vercel": "cd web-app && vercel deploy",
		"desktop:dev": "powershell scripts/dev-desktop.ps1",
		"desktop:build": "cd desktop-app && npm run tauri:build",
		"mobile:dev": "powershell scripts/dev-mobile.ps1",
		"mobile:build": "cd mobile-app/flutter_project && flutter build apk",
		"mobile:build:ios": "cd mobile-app/flutter_project && flutter build ios",
		"// === Setup & Build Scripts ===": "",
		"setup": "powershell scripts/setup.ps1",
		"build": "powershell scripts/build.ps1",
		"build:web": "powershell scripts/build.ps1 -Target web",
		"build:desktop": "powershell scripts/build.ps1 -Target desktop",
		"build:mobile": "powershell scripts/build.ps1 -Target mobile",
		"build:all": "powershell scripts/build.ps1 -Target all",
		"// === Rust Backend Scripts ===": "",
		"rust:build": "cd core-rust-backend && cargo build",
		"rust:test": "cd core-rust-backend && cargo test",
		"rust:check": "cd core-rust-backend && cargo check",
		"rust:web": "cd web-app/api && cargo build",
		"rust:tauri": "cd desktop-app/src-tauri && cargo build",
		"rust:mobile": "cd mobile-app/native_bindings && cargo build",
		"// === Install Scripts ===": "",
		"install:all": "npm install && npm run install:web && npm run install:desktop && npm run install:mobile",
		"install:web": "cd web-app/sveltekit-frontend && npm install",
		"install:desktop": "cd desktop-app && npm install && cd sveltekit-frontend && npm install",
		"install:mobile": "cd mobile-app/flutter_project && flutter pub get",
		"// === Database Scripts ===": "",
		"db:start": "docker compose up",
		"db:push": "cd web-app/sveltekit-frontend && node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs push",
		"db:migrate": "cd web-app/sveltekit-frontend && node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs migrate",
		"db:generate": "cd web-app/sveltekit-frontend && node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs generate && tsx ../../scripts/fix-migrations.ts",
		"db:fix-migrations": "tsx scripts/fix-migrations.ts",
		"db:seed": "cd web-app/sveltekit-frontend && tsx src/lib/server/db/seed.ts",
		"db:seedWatch": "cd web-app/sveltekit-frontend && tsx -r dotenv/config watch src/lib/server/db/seed.ts",
		"db:reset": "cd web-app/sveltekit-frontend && node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs reset",
		"db:clear-users": "tsx scripts/clear-users.ts",
		"db:studio": "cd web-app/sveltekit-frontend && node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs studio --verbose",
		"switch-db": "node scripts/switch-db.js",
		"// === Code Quality Scripts ===": "",
		"prepare": "cd web-app/sveltekit-frontend && svelte-kit sync || echo ''",
		"check": "npm run check:web && npm run check:desktop && npm run rust:check",
		"check:web": "cd web-app/sveltekit-frontend && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:desktop": "cd desktop-app/sveltekit-frontend && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "cd web-app/sveltekit-frontend && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"// === Test Scripts ===": "",
		"test": "npm run test:rust && npm run test:web",
		"test:rust": "cd core-rust-backend && cargo test",
		"test:web": "cd web-app/sveltekit-frontend && npm run test",
		"test:desktop": "cd desktop-app/sveltekit-frontend && npm run test"
	},
	"devDependencies": {
		"@types/node": "^22",
		"dotenv": "^16.5.0",
		"prettier": "^3.4.2",
		"tsx": "^4.20.2",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@tauri-apps/api": "^1.5.3",
		"drizzle-kit": "^0.31.1",
		"drizzle-orm": "^0.44.2",
		"node-fetch": "^3.3.2"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=8.0.0"
	}
}
