{
	"name": "prosecutor-web-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:local": "vite dev",
		"dev:with-db": "npm run db:migrate && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"db:start": "docker compose up",
		"db:push": "node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs push",
		"db:migrate": "node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs migrate",
		"db:generate": "node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs generate && tsx scripts/fix-migrations.ts",
		"db:fix-migrations": "tsx scripts/fix-migrations.ts",
		"db:seed": "tsx src/lib/server/db/seed.ts",
		"db:seedWatch": "tsx -r dotenv/config watch src/lib/server/db/seed.ts",
		"db:reset": "node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs reset",
		"db:clear-users": "tsx scripts/clear-users.ts",
		"db:studio": "node -r dotenv/config ./node_modules/drizzle-kit/bin.cjs studio --verbose",
		"switch-db": "node scripts/switch-db.js",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:headed": "playwright test --headed",
		"test:debug": "playwright test --debug"
	},
	"devDependencies": {
		"@playwright/test": "^1.53.0",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/postcss": "^4.1.10",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/lodash": "^4.17.17",
		"@types/node": "^22.15.32",
		"@types/pg": "^8.15.4",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "10.4.x",
		"daisyui": "^5.0.43",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.1",
		"pg": "^8.16.0",
		"playwright": "^1.53.0",
		"postcss": "8.5.x",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.10",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite": "^6.2.6",
		"vite-plugin-devtools-json": "^0.2.0",
		"vite-plugin-pwa": "^1.0.0"
	},	"dependencies": {
		"@auth/core": "^0.39.1",
		"@auth/drizzle-adapter": "^1.9.1",
		"@auth/sveltekit": "^1.9.2",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@tauri-apps/api": "^1.5.3",
		"@toast-ui/editor": "^3.2.2",
		"@types/better-sqlite3": "^7.6.13",
		"@types/lodash-es": "^4.17.12",
		"@types/pdfkit": "^0.14.0",
		"@uploadthing/svelte": "^7.3.1",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.2",
		"better-sqlite3": "^11.10.0",
		"bootstrap": "^5.3.6",
		"drizzle-orm": "^0.44.2",
		"jsonwebtoken": "^9.0.2",
		"lodash-es": "^4.17.21",
		"lokijs": "^1.5.12",
		"lucia": "^3.2.2",
		"marked": "^15.0.12",
		"pdfkit": "^0.17.1",
		"postgres": "^3.4.5",
		"uuid": "^11.1.0",
		"zod": "^3.25.64"
	}
}
