		"@types/lodash": "^4.17.17",
		"@types/lokijs": "^1.5.14",
		"@types/node": "^22.15.32",
		"@types/pg": "^8.15.4",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "10.4.x",
		"cssnano": "^7.0.7",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.31.1",
		"pg": "^8.16.0",
		"playwright": "^1.53.0",
		"postcss": "8.5.x",
		"postcss-custom-properties": "^14.0.6",
		"postcss-import": "^16.1.1",
		"postcss-nesting": "^13.0.2",
		"prettier": "^3.4.2",
